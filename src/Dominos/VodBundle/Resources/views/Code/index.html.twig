{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Code list</h1>

    <table class="records_list" border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prestataire</th>
                <th>Code</th>
                <th>Dateused</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('code_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                 <td>{{ entity.prestataire.nompresta }}</td>
                <td>{{ entity.code }}</td>
                <td>{% if entity.dateused %}{{ entity.dateused|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('code_show', { 'id': entity.id }) }}">show</a>
                    </li>
                
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('code_new') }}">
               Ajouter des codes 
            </a>
        </li>
        <li>
            <a href="{{ path('code_replace') }}">
              Remplacer des codes
            </a>
        </li>
    </ul>
    {% endblock %}
