{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Prestataire list</h1>

    <table class="records_list" border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nompresta</th>
                <th>Startpresta</th>
                <th>Endpresta</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('prestataire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nompresta }}</td>
                <td>{% if entity.startpresta %}{{ entity.startpresta|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.endpresta %}{{ entity.endpresta|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('prestataire_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('prestataire_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('prestataire_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
