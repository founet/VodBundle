{% extends '::base.html.twig' %}

{% block body -%}
   <div class="white">
    <table class="table" >
        <thead>
            <tr>
                <th>Prestataires</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Codes Utilisés</th>
                <th>Codes Restants</th>
                <th>Menus</th>
                <th>Ventillation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>({{ entity.id }}){{ entity.nompresta }}</td>
                <td>{% if entity.startpresta %}{{ entity.startpresta|date('d/m/Y H:i:s') }}{% endif %}</td>
                <td>{% if entity.endpresta %}{{ entity.endpresta|date('d/m/Y H:i:s') }}{% endif %}</td>
                <td>{{entity.getNbreCodeUsed}}</td>
                <td>{{entity.getNbreCodesDispo}}</td>
                <td>{{entity.haveMenus}}</td>
                <td>{{entity.isVentiller}}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('prestataire_show', { 'id': entity.id }) }}" class="btn btn-info">Afficher</a>
                    </li>
                    <li>
                        <a href="{{ path('prestataire_edit', { 'id': entity.id }) }}" class="btn btn-info">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('prestataire_new') }}" class="btn btn-info">
                Ajouter un prestataire
            </a>
        </li>
    </ul>
<div>
    {% endblock %}
